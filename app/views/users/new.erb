<script type="text/javascript">
    $(document).ready(function () {
        $('.multiselect').multiselect();
    });
</script>

<div class="threeBoxContainer width500">
  <section class="content ">
    <%= form_tag do %>
        <h1 class="surroundLine">New User Registration</h1>
        <%= render 'layouts/flash_messages' %>
        <div>
          <%= text_field_tag 'new_user_name', nil, :required => true, :placeholder => "User Name" %>
        </div>
        <div>
          <%= password_field_tag 'new_user_password', nil, :required => true, :placeholder => "Password" %>
        </div>
        <div>
          <%= password_field_tag 'new_user_confirm', nil, :required => true, :placeholder => "Confirm Password" %>
        </div>
        <div>
          <%= text_field_tag 'new_user_email', nil, :required => true, :placeholder => "E-mail" %>
        </div>

        <div class="row">
          <div class="col-md-offset-2">
            <label class="pull-left">Department</label>
            <div class="inline-drop-down col-md-7">
              <% @list=Category.where(is_dept: 't') %>
              <% options = options_from_collection_for_select(@list, 'id', 'name') %>
              <%= select_tag :selected_department, options, :class => 'form-control' %>
            </div>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-offset-2">
            <label class="pull-left">Interests</label>

            <div class="inline-drop-down col-md-7 ">
              <%= select_tag 'user_interest[]',
                             options_from_collection_for_select(Category.all, :id, :name),
                             :class => 'multiselect',
                             'multiple' => 'multiple' %>
            </div>
          </div>
        </div>

        <div class="row">
          <%= submit_tag 'Register', :class => "btn btn-primary footerButton", :id => "newUserRegisterBtn" %>
          <%= link_to "Cancel", "/", :class => "btn btn-default footerButton" %>
        </div>
    <% end %> <!-- form -->
  </section>
  <!-- content -->
</div><!-- container -->


